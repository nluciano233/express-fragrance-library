<div class="admin-layout">
  <div class="admin-nav-bar">
    <a href="/admin/inventory">Products</a>
    <a href="/admin/categories">Categories</a>
  </div>

  <div class="admin-content">
    <div class="mobile-container">
      <div class="mobile-categories-page">
        <% categories.map((e) => { %>
          <a href=<%= e.admin_url %>>
            <div class="category-container">
              <h2><%- e.name %></h2>
              <i class="bi bi-chevron-right"></i>
            </div>
          </a>
        <% }) %> 
      </div>
    </div>

    <div class="desktop-container">
      <div class="desktop-categories-page">

        <div class="categories-labels-container">
          <div class="add-new-container">
            <a href="/admin/category/create">
              <i class="bi bi-plus-circle"></i>&nbspNEW
            </a>
          </div>
          <span>Name</span>
          <span>Description</span>
        </div>

        <div class="categories-main-container">
          <% categories.map((e) => { %>
              <div class="category-container">
                <div class="edit-container">
                  <a href=<%= e.admin_url %>>
                    Edit <i class="bi bi-pencil-square"></i>
                  </a>
                </div>
                <span><%- e.name %></span>
                <span><%- e.description %></span>
              </div>
          <% }) %>
        </div>

      </div>
    </div>
  </div>
</div>
